<launch>
    <arg name="gui" default="true"/>
    <arg name="bag_name" default="ibvs_hil"/>
    <node name="player" pkg="rosbag" type="play" args="$(find ground_control)/bags/$(arg bag_name).bag"/>
    <include file="$(find ground_control)/launch/ground_control.launch">
        <arg name="gui" value="$(arg gui)"/>
    </include>
</launch>
